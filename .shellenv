# general
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export NOTES=~/notes
export DOTFILES=~/dotfiles
export BOOKMARKS=~/dotfiles/.config/nvim/bookmarks.md
export MYVIMRC=~/dotfiles/.config/nvim/init.vim
export TASK=~/notes/tasks/$(date +%Y)/$(date +%m)
export BOX=~/notes/tasks/box
export EDITOR=nvim
export KEYTIMEOUT=1
export HISTSIZE=1000
export HISTFILE=${HOME}/.zsh_history
export LANG=ja_JP.UTF-n
export FZF_DEFAULT_COMMAND='rg --files --hidden --glob "!.git"'
export FZF_DEFAULT_OPTS='--height 100% --reverse --color=info:#79740e,prompt:#79740e,spinner:#79740e,pointer:#cc241d,marker:#458588,border:#79740e'

# bin
export PATH=~/bin:"$PATH"

# go
export GOPATH=$HOME/go
export GOROOT=/usr/local/opt/go/libexec
export PATH=$PATH:$GOPATH/bin

# nodebrew
export PATH=$HOME/.nodebrew/current/bin:$PATH
