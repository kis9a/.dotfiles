# alias

alias v='nvim'
alias vim='nvim'
alias v.='nvim .'
alias emacs='vim'
alias vr='cd ~/.config/nvim; v init.vim'
alias vimrc='vim ~/.vimrc'
alias zshrc-='v ~/.zshrc'
alias t='tmux -u new -s $(pwd)'
alias ta='tmux a'
alias tat='tmux a -t'
alias tk='tmux kill-server'
alias tl='tmux list-session'
alias trc='v ~/.tmux.conf'
alias ide='sh ~/bin/ide.sh'
alias e='emacs'

alias .log='nvim ~/.log/$(date +%F).md'
alias .logs='cd ~/.log; nvim .'
alias .logc='git commit -m $(date +%F)'
alias wiki='cd ~/vimwiki; nvim .'
alias p='termdown -f mini -s 25m; terminal-notifier -message "stop task and break" -sound default; termdown -f mini -s 5m; terminal-notifier -sound default -message "break stop"'

alias ..='cd ..'
alias ...='cd ../..'
alias sl='lsd -la'
alias ls='ls -AGF'
alias lsc='cowsay $(ls)'
alias te='trans {en=ja}'
alias tj='trans {ja=en}'
alias g='git'
alias ga='git add'
alias ga.='git add .'
alias gc='git commit'
alias gca='git commit --amend'
alias f='fzf'
alias bgm="mpv 'https://www.youtube.com/watch?v=5qap5aO4i9A&ab_channel=ChilledCow' --no-video"
