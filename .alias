# alias

alias v='nvim'
alias vim='nvim'
alias v.='nvim .'
alias ovim='vim'
alias vrc='cd ~/.config/nvim; v.'
alias vimrc='vim ~/.vimrc'
alias zshrc-='v ~/.zshrc'
alias tm='tmux new -s $(pwd)'
alias tma='tmux a'
alias tmconf='v ~/.tmux.conf'
alias ide='sh ~/bin/ide.sh'
alias e='emacs'

alias .log='nvim ~/.log/$(date +%F).md'
alias .logs='cd ~/.log; nvim .'
alias .logc='git commit -m $(date +%F)'
alias pomo='ttimer 25; terminal-notifier -message "stop task and break" -sound default; ttimer 5; terminal-notifier -sound default -message "break stop"'

alias ..='cd ..'
alias ...='cd ../..'
alias ls='ls -AGF'
alias lsc='cowsay $(ls)'
alias te='trans {en=ja}'
alias tj='trans {ja=en}'
alias g='git'
alias ga='git add'
alias ga.='git add .'
alias gc='git commit'
alias gca='git commit --amend'
alias f='fzf'
alias bgm="mpv 'https://www.youtube.com/watch?v=5qap5aO4i9A&ab_channel=ChilledCow' --no-video"
